<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5p (%C{1}:%L) - %m%n" charset="UTF-8"/>
        </Console>

        <RandomAccessFile name="category" filename="/var/sankuai/logs/category_fill.log">
            <PatternLayout pattern="%d{DEFAULT} [%t] %-5p (%C{1}:%L) - %m%n" charset="UTF-8"/>
        </RandomAccessFile>
        <!--隐私号 骑士卡日志 上报-->
        <Scribe name="chivalryCardAppender">
            <Property name="scribeCategory">wm_privatenumber_chivalry_card_bill</Property>
            <LcLayout/>
        </Scribe>
        <Async name="chivalryCardAsyncAppender" blocking="false">
            <AppenderRef ref="chivalryCardAppender"/>
        </Async>
    </Appenders>

    <Scribe name="ScribeAppender">
        <LcLayout/>
    </Scribe>
    <Async name="ScribeAsyncAppender" blocking="false">
        <AppenderRef ref="ScribeAppender"/>
    </Async>

    <Loggers>
        <!--敏感信息日志上报logger-->
        <logger name="secretLogger" level="info" includeLocation="true">
            <appender-ref ref="ScribeAsyncAppender"/>
        </logger>
<!--本地干掉Jmonitor日志-->
        <logger name="jmonitorlogstore" level="error">
            <appender-ref ref="CONSOLE"/>
        </logger>

        <AsyncLogger name="privatenumber_chivalry_card_bill" level="info" includeLocation="true" additivity="false">
            <AppenderRef ref="chivalryCardAsyncAppender"/>
        </AsyncLogger>
        <!-- Root Logger -->
        <AsyncRoot level="info" includeLocation="true">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="category"/>
        </AsyncRoot>

    </Loggers>


</Configuration>
